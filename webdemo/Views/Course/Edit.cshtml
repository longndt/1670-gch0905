@model webdemo.Models.Course 

<div class="container-fluid col-md-5 text-center mt-3">
    <h5 class="alert alert-warning">Edit course</h5>
    <form action="Edit" method="post">
        <input type="hidden" asp-for="CourseId" />
        <div class="form-group">
            <label asp-for="Title"></label>
            <input class="form-control" asp-for="Title">
             <span class="text text-danger" asp-validation-for="Title"></span>
        </div>
         <div class="form-group">
            <label asp-for="Credits"></label>
            <input class="form-control" asp-for="Credits">
             <span class="text text-danger" asp-validation-for="Credits"></span>
        </div>
        <div class="form-group">
            <input class="btn btn-success" type="submit" value="Edit">
        </div>
    </form>
</div>