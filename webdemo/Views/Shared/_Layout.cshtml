<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Web Demo </title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/style.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <h3>
                                <a class="text text-danger mr-3" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </h3>
                        </li>
                         <li class="nav-item">
                            <h3>
                                <a class="text text-success mr-3" asp-area="" asp-controller="Course" asp-action="Index">Course</a>
                            </h3>
                        </li>
                        <li class="nav-item">
                            <h3>
                                <a class="text text-success mr-3" asp-area="" asp-controller="Student" asp-action="Index">Student</a>
                            </h3>
                        </li>
                        <li class="nav-item">
                            <h3>
                                <a class="text text-success" asp-area="" asp-controller="Enrollment" asp-action="Index">Enrollment</a>
                            </h3>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="alert alert-info text-center">
            <h6><i>Demo web - Summer 2022</i></h6>  
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
