@model webdemo.Models.Student;

<div class="container col-md-8 text-center mt-3">
    <h1 class="text text-danger">Create new student</h1>
    <form class="card p-2 bg-white" action="Create" method="post">
        <div class="form-group">
            <label class="text text-info">First & Middle Name</label>
            <input class="form-control" asp-for="FirstMidName" />
            <span class="text text-danger" asp-validation-for="FirstMidName"></span>
        </div>
        <div class="form-group">
            <label class="text text-info">Last Name</label>
            <input class="form-control" asp-for="LastName" />
            <span class="text text-danger" asp-validation-for="LastName"></span>
        </div>
        <div class="form-group">
            <label class="text text-info">Enrollment Date</label>
            <input class="form-control" asp-for="EnrollmentDate" />
            <span class="text text-danger" asp-validation-for="EnrollmentDate"></span>
        </div>
        <div class="form-group">
            <input class="btn btn-primary" type="submit" value="Create" />
        </div>
    </form>
</div>